<div class="container mt-4 col-md-6 mx-auto">

  <h2 class="fw-bold mb-4">アカウント設定</h2>

  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <!-- メールアドレス -->
    <div class="mb-3">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <!-- パスワード（変更する場合のみ入力） -->
    <div class="mb-3">
      <%= f.label :password, "新しいパスワード（変更する場合だけ）" %>
      <%= f.password_field :password, autocomplete: "new-password",
            class: "form-control" %>
    </div>

    <!-- パスワード確認 -->
    <div class="mb-3">
      <%= f.label :password_confirmation, "新しいパスワード（確認用）" %>
      <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "form-control" %>
    </div>

    <!-- 現在のパスワード（必須） -->
    <div class="mb-3">
      <%= f.label :current_password, "現在のパスワード（必須）" %>
      <%= f.password_field :current_password,
            autocomplete: "current-password",
            class: "form-control" %>
    </div>

    <%= f.submit "更新する", class: "btn btn-primary w-100" %>
  <% end %>

  <!-- ▼ 退会ボタン -->
  <hr class="my-4">

  <div class="text-center">
  <% unless resource.guest? %>
    <%= button_to "退会する",
        registration_path(resource_name),
        method: :delete,
        data: { confirm: "本当に退会しますか？この操作は取り消せません。" },
        class: "btn btn-outline-danger w-100" %>
  <% else %>
    <p class="text-muted">
      ゲストユーザーは退会できません
    </p>
  <% end %>
</div>

</div>