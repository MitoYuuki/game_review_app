<div class="container mt-4">
  <div class="row">

    <!-- ▼ 左側：投稿一覧 -->
    <div class="col-md-7">

      <h3 class="mb-3">投稿一覧</h3>

      <% @posts.each do |post| %>
        <div class="card mb-3 p-3">
          <h5><%= link_to post.title, post_path(post) %></h5>
          <p><%= truncate(post.body, length: 100) %></p>
        </div>
      <% end %>

    </div>

    <!-- ▼ 右側：プロフィール情報 -->
<div class="col-md-4 offset-md-1">

  <!-- 名前 -->
  <h4><%= @user.name %></h4>

  <!-- プロフィール画像 -->
  <%= image_tag @user.get_profile_image, class: "rounded-circle", size: "120x120" %>

  <!-- 自己紹介 -->
  <p class="text-muted">
    <%= @user.profile.presence || "自己紹介はまだありません。" %>
  </p>

  <!-- プロフィール編集（名前もここで編集） -->
  <%= link_to "プロフィールを編集する", edit_user_path(@user),
        class: "btn btn-primary btn-sm w-80 mt-2" %><br>

  <!-- アカウント編集 -->
  <%= link_to "アカウント設定（メール・パスワード変更）",
      edit_account_path,
      class: "btn btn-secondary btn-sm w-80 mt-2" %>

</div>

  </div>
</div>
