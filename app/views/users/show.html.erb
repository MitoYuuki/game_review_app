<div class="container mt-4">
  <div class="row">

    <!-- ▼ 左側：投稿一覧 -->
    <div class="col-12 col-md-7 mb-4 mb-md-0">

      <h3 class="mb-3">投稿一覧</h3>

      <% @posts.each do |post| %>
        <div class="card mb-3 p-3">
          <div class="d-flex justify-content-between align-items-center">
            <h5><%= link_to post.title, post_path(post) %></h5>
            <% if post.published? %>
              <span class="badge bg-success">公開</span>
            <% else %>
              <span class="badge bg-secondary">非公開</span>
            <% end %>
          </div>
          <p><%= truncate(post.body, length: 100) %></p>
        </div>
      <% end %>

    </div>

    <!-- ▼ 右側：プロフィール・フォローボタン -->
    <div class="col-12 col-md-4 offset-md-1">

      <% if @user.is_public? || @user == current_user %>
        <!-- プロフィール共通パーツ -->
        <%= render "users/profile_summary", user: @user %>

        <!-- フォロー/アンフォローボタン（自分以外のみ） -->
        <% if current_user != @user %>
          <div id="follow-area-<%= @user.id %>" class="d-grid mt-2">
            <%= render "users/follow_button_core", user: @user %>
          </div>
        <% end %>

      <% else %>
        <!-- 非公開ユーザーの場合 -->
        <p class="alert alert-secondary">
          このユーザーのプロフィールは非公開です
        </p>
      <% end %>

    </div>
  </div>
</div>
