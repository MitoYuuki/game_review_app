<div class="container mt-4">

  <div class="row justify-content-center">

    <div class="col-md-8">

      <h2 class="mb-3 text-center"><%= @group.name %></h2>

      <p class="text-center text-muted"><%= @group.description %></p>

      <hr>

      <% @posts.each do |post| %>
        <div class="card mb-3">
          <div class="card-body">

            <h5>
              <%= link_to post.title, post_path(post) %>
            </h5>

            <p><%= truncate(post.body, length: 80) %></p>

            <small class="text-light">
              投稿者：
              <%= link_to post.user.name,
              user_path(post.user),
              class: "text-info" %>
            </small>

          </div>
        </div>
      <% end %>

    </div>

  </div>

</div>

