<h2>トピック編集</h2>

<% if @topic.errors.any? %>
  <div class="alert alert-danger">
    <strong>トピックの更新に失敗しました。</strong>
    <ul class="mb-0">
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg.gsub(/\A.+ /, "") %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [@community, @topic], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :body, "本文" %>
    <%= f.text_area :body, rows: 8, class: "form-control" %>
  </div>

  <%= f.submit "更新する", class: "btn btn-primary" %>
<% end %>
