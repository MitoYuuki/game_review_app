<div class="container mt-4">

  <h2>トピック作成</h2>

  <% if @topic.errors.any? %>
    <div class="alert alert-danger">
      <strong>トピックの作成に失敗しました。</strong>
      <ul class="mb-0">
        <% @topic.errors.full_messages.each do |msg| %>
          <li><%= msg.gsub(/\A.+ /, "") %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: [@community, @topic], local: true do |f| %>

    <div class="mb-3">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: "form-control", placeholder: "トピックタイトル" %>
    </div>

    <div class="mb-3">
      <%= f.label :body, "本文" %>
      <%= f.text_area :body, class: "form-control", rows: 6, placeholder: "内容を書いてください" %>
    </div>

    <div class="mt-3">
      <%= f.submit "作成する", class: "btn btn-primary" %>
      <%= link_to "戻る", community_topics_path(@community), class: "btn btn-secondary ms-2" %>
    </div>

  <% end %>
</div>
