<!-- app/views/layouts/admin.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>GameReviewApp | Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/640d7a3cf3.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <!-- 共通ヘッダー（管理者/ユーザー切替） -->
    <%= render "layouts/header" %>

    <!-- フラッシュメッセージ -->
    <% flash.each do |key, message| %>
      <div class="alert alert-<%= flash_class(key) %> text-center mt-3">
        <%= message %>
      </div>
    <% end %>

    <!-- 管理者ページ本体 -->
    <%= yield %>
  </body>
</html>

