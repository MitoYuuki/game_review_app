<div class="container mt-4">
  <h2>レビュー管理</h2>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>ユーザー</th>
        <th>タイトル</th>
        <th>投稿日</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.user.name %></td>
          <td><%= link_to post.title, admin_post_path(post) %></td>
          <td><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
