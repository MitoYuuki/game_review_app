<div class="container mt-4">
  <h2>投稿一覧</h2>

  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>ID</th>
        <th>ユーザー</th>
        <th>タイトル</th>
        <th>投稿日</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.user.name %></td>
          <td><%= post.title %></td>
          <td><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <%= link_to "詳細", admin_post_path(post), class: "btn btn-sm btn-outline-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="mt-4">
      <%= paginate @posts %>
  </div>
</div>
