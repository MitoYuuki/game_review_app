<div class="container mt-4">

  <!-- ▼ 上部：戻るボタン -->
  <div class="mb-3">
    <%= link_to "← コミュニティ詳細に戻る",
          admin_community_path(@community),
          class: "btn btn-outline-secondary" %>
  </div>

  <!-- ▼ トピック詳細 -->
  <div class="card mb-3">
    <div class="card-header fw-bold">
      トピック詳細
    </div>

    <div class="card-body">
      <h3 class="mb-2"><%= @topic.title %></h3>

      <p class="text-white small">
        投稿者：<%= @topic.user.name %><br>
        投稿日：<%= @topic.created_at.strftime("%Y-%m-%d %H:%M") %>
      </p>

      <p class="text-break">
        <%= simple_format(@topic.body) %>
      </p>

      <div class="d-flex justify-content-end">
        <%= link_to "トピック削除",
              admin_community_topic_path(@community, @topic),
              method: :delete,
              data: { confirm: "本当に削除しますか？" },
              class: "btn btn-danger" %>
      </div>
    </div>
  </div>

  <!-- ▼ コメント一覧 -->
  <div class="card">
    <div class="card-header fw-bold">
      コメント一覧
    </div>

    <div class="card-body">

      <% if @comments.present? %>

        <% @comments.each do |comment| %>
          <div class="border rounded p-2 mb-2">

            <div class="d-flex justify-content-between flex-wrap">
              <strong><%= comment.user.name %></strong>

              <span class="text-white small">
                <%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>
              </span>
            </div>

            <p class="mt-1 text-break">
              <%= simple_format(comment.body) %>
            </p>

            <div class="text-end">
              <%= link_to "削除",
                    admin_community_topic_topic_comment_path(
                      @community, @topic, comment
                    ),
                    method: :delete,
                    data: { confirm: "このコメントを削除しますか？" },
                    class: "btn btn-sm btn-outline-danger" %>
            </div>

          </div>
        <% end %>

      <% else %>
        <div class="alert alert-info">
          コメントはまだありません
        </div>
      <% end %>

    </div>
  </div>

</div>
