<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">

      <h2 class="mb-3 text-center"><%= @tag.name %></h2>
      <hr>

      <% @posts.each do |post| %>
        <div class="card mb-3">
          <div class="card-body">

            <h5 class="card-title text-truncate">
              <%= link_to post.title, post_path(post), class: "text-decoration-none" %>
            </h5>

            <p class="card-text"><%= truncate(post.body, length: 80) %></p>

            <small class="text-light">
              投稿者：
              <%= link_to post.user.name, user_path(post.user), class: "text-info" %>
            </small>

          </div>
        </div>
      <% end %>

      <% if @posts.empty? %>
        <p class="text-center text-light">このタグに関連する投稿はまだありません。</p>
      <% end %>

    </div>
  </div>
</div>
