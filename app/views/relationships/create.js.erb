(() => {
  // フォローボタン更新
  $("#follow-area-<%= @user.id %>").html(
    "<%= j(render('users/follow_button_core', user: @user)) %>"
  );

  const followingCount = document.getElementById(
    "following-count-<%= current_user.id %>"
  );
  if (followingCount) {
    followingCount.innerText = "<%= current_user.following.count %>";
  }

  const followersCount = document.getElementById(
    "followers-count-<%= @user.id %>"
  );
  if (followersCount) {
    followersCount.innerText = "<%= @user.followers.count %>";
  }
})();
