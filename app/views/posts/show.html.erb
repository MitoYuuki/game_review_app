<div class="container mt-5">
  <div class="post-detail">
    <h2 class="mb-2 d-flex flex-column flex-md-row align-items-md-center">
      <span><%= @post.title %></span>
      <small class="ms-md-3 mt-1 mt-md-0 fs-6 d-flex align-items-center">
        投稿者：
        <%= link_to @post.user.name, user_path(@post.user), class: "text-decoration-none text-info me-2" %>
        <% if user_signed_in? && current_user != @post.user %>
          <%= render "users/follow_button", user: @post.user %>
        <% end %>
      </small>
    </h2>


    <div class="d-flex flex-column flex-md-row mb-3">
      <p class="me-md-3"><strong>プラットフォーム：</strong> <%= @post.platform %></p>
      <p class="me-md-3"><strong>ジャンル：</strong> <%= @post.group.name if @post.group %></p>
      <p><strong>評価：</strong> <%= @post.rate %> ★</p>
    </div>

    <div class="mb-3">
      <strong>レビュー内容：</strong>
      <p><%= simple_format(@post.body) %></p>
    </div>

    <p><strong>プレイ時間：</strong> <%= @post.play_time %></p>
    <p><strong>難易度：</strong> <%= @post.difficulty %></p>
    <p><strong>おすすめ度：</strong>
      <%= case @post.recommend_level.to_i
          when 1 then "おすすめしない"
          when 2 then "微妙"
          when 3 then "普通"
          when 4 then "おすすめ"
          when 5 then "超おすすめ"
          else "未設定"
          end %>
    </p>

    <p>
      <strong>タグ：</strong>
      <% @post.tags.each do |tag| %>
        <span class="badge me-1 mb-1"><%= tag.name %></span>
      <% end %>
    </p>

    <% if @post.image.attached? %>
      <div class="mb-3 text-center">
        <p><strong>投稿画像：</strong></p>
        <%= image_tag @post.image.variant(resize_to_limit: [600, 600]),
                      class: "img-fluid rounded shadow" %>
      </div>
    <% end %>

    <p>投稿日時：<%= @post.created_at.strftime("%Y-%m-%d %H:%M") %></p>

    <h4>コメント</h4>
    <% @post.comments.each do |comment| %>
      <div class="comment-box">
        <strong><%= comment.user.name %></strong>
        <small class="text-white ms-2"><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></small>
        <p class="mb-1"><%= comment.body %></p>
        <% if comment.user == current_user %>
          <%= link_to "削除",
                      post_comment_path(@post, comment),
                      method: :delete,
                      data: { confirm: "このコメントを削除しますか？" },
                      class: "btn btn-sm btn-outline-danger" %>
        <% end %>
      </div>
    <% end %>

    <% if user_signed_in? && !current_user.guest? %>
      <%= form_with model: [@post, Comment.new], local: true do |f| %>
        <div class="mb-3">
          <%= f.text_area :body, class: "form-control", placeholder: "コメントを入力" %>
        </div>
        <%= f.submit "コメント投稿", class: "btn btn-primary" %>
      <% end %>
    <% elsif user_signed_in? && current_user.guest? %>
      <p class="text-white">
        ※ ゲストユーザーはコメントの投稿はできません
      </p>
    <% end %>

    <div id="like-area">
      <%= render "likes/like", post: @post %>
    </div>

    <div class="mt-4 d-flex flex-column flex-md-row align-items-start align-items-md-center">
      <% if @post.user == current_user %>
        <%= link_to "編集", edit_post_path(@post), class: "btn btn-warning me-2 mb-2 mb-md-0" %>
        <%= link_to "削除", post_path(@post), method: :delete,
                    data: { confirm: "本当に削除しますか？" },
                    class: "btn btn-danger me-2 mb-2 mb-md-0" %>
      <% end %>
      <%= link_to "一覧に戻る", posts_path, class: "btn btn-secondary" %>
    </div>
  </div> <!-- post-detail -->
</div> <!-- container -->
