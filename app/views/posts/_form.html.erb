<!-- app/views/posts/_form.html.erb -->
<%= form_with(model: post, local: true) do |f| %>

  <% if post.errors.any? %>
    <div class="error-messages">
      <h2><%= post.errors.count %>件のエラーがあります:</h2>
      <ul>
        <% post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content, "内容" %>
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.label :group_id, "グループ" %>
    <%= f.collection_select :group_id, Group.all, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  <div class="field">
    <%= f.label :tag_names, "タグ（,区切り）" %>
    <%= f.text_field :tag_names, value: @post.tags.pluck(:name).join(", ") %>
  </div>

<% end %>
