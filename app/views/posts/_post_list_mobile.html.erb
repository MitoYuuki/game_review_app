<h4 class="mb-3">新着投稿</h4>

<div class="mb-2 small">
  並び替え：
  <%= link_to "新着", posts_path(sort: "new") %> |
  <%= link_to "評価", posts_path(sort: "rate") %> |
  <%= link_to "いいね", posts_path(sort: "likes") %>
</div>

<% posts.each do |post| %>
  <div class="card mb-2 p-2">
    <div><strong><%= link_to post.title, post_path(post) %></strong></div>
    <div class="small text-muted"><%= post.user.name %> / <%= post.platform %></div>
    <div class="small">
      <span>📅 <%= post.created_at.strftime("%m/%d") %></span>
      <span>🏷️ <%= post.group.name %></span>
      <span>⭐ <%= post.rate %></span>
      <span>❤️ <%= post.likes.count %></span>
      <span>👁️ <%= post.views || 0 %></span>
    </div>
  </div>
<% end %>

<%= paginate posts %>
